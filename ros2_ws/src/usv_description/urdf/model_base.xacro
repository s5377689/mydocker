<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- ==================== -->
  <!--    Link Definitions  -->
  <!-- ==================== -->
  <xacro:macro name="hull_link" params="prefix">
    <link name="${prefix}_hull_link">
      <collision>
        <geometry>
          <box size="2.2 0.5 0.2"/>
        </geometry>
        <origin xyz="0.1 0 0.05" rpy="0 0 0"/>
      </collision>
      <collision>
        <geometry>
          <cylinder radius="0.128" length="2"/>
        </geometry>
        <origin xyz="0 0 -0.05" rpy="0 ${pi/2.0} 0"/>
      </collision>
      <xacro:box_inertia
        m="30"
        x="2.2" y="0.5" z="0.25"
        o_xyz="0.1 0 0.035"
        o_rpy="0 0 0"
      />
    </link>
  </xacro:macro>

  <xacro:macro name="propeller_link" params="prefix">
    <link name="${prefix}_propeller_link">
      <visual> 
        <geometry>
          <xacro:if value="${prefix == 'left'}">
            <mesh
              filename="file://$(find usv_description)/meshes/propeller.dae"
              scale="1 1 1"
            />
          </xacro:if>
          <xacro:if value="${prefix == 'right'}">
            <mesh
              filename="file://$(find usv_description)/meshes/propeller.dae"
              scale="1 1 1"
            />
          </xacro:if>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.2 0.1 0.1"/>
        </geometry>
        <origin xyz="-0.06 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:box_inertia
        m="1"
        x="0.1"
        y="0.1"
        z="0.1"
        o_xyz="-0.08 0 0"
        o_rpy="0 0 0"
      />
    </link>
  </xacro:macro>

  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="file://$(find usv_description)/meshes/USV.dae"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <!-- <mesh filename="file://$(find usv_description)/meshes/USV.dae"/> -->
        <box size="1.9 0.65 0.315"/>
      </geometry>
      <origin xyz="-0.08 0 0.03" rpy="0 0 0"/>
    </collision>
    <xacro:box_inertia
      m="50"
      x="1.7" y="0.65" z="0.33"
      o_xyz="0 0 0"
      o_rpy="0 0 0"
    />
  </link>

  <link name="imu_link">
    <xacro:box_inertia
      m="0.1"
      x="0.1" y="0.1" z="0.1"
      o_xyz="0 0 0"
      o_rpy="0 0 0"
    />
  </link>

  <xacro:hull_link prefix="left"/>
  <xacro:hull_link prefix="right"/>

  <xacro:propeller_link prefix="left"/>
  <xacro:propeller_link prefix="right"/>

  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
    <xacro:box_inertia
      m="5"
      x="0.1" y="0.1" z="0.1"
      o_xyz="0 0 0"
      o_rpy="0 0 0"
    />
  </link>

  <!-- ==================== -->
  <!--   Joint Definitions  -->
  <!-- ==================== -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.49" rpy="0 0 0"/>
  </joint>

  <joint name="base_left_hull_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_hull_link"/>
    <origin xyz="0 0.55 -0.32" rpy="0 0 0"/>
  </joint>
  
  <joint name="base_right_hull_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_hull_link"/>
    <origin xyz="0 -0.55 -0.32" rpy="0 0 0"/>
  </joint>

  <joint name="base_camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.7 0 0.158" rpy="0 0 0"/>
  </joint>

  <joint name="base_imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="base_left_propeller_joint" type="continuous">
    <parent link="left_hull_link"/>
    <child link="left_propeller_link"/>
    <origin xyz="-0.95 0 -0.1235" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="base_right_propeller_joint" type="continuous">
    <parent link="right_hull_link"/>
    <child link="right_propeller_link"/>
    <origin xyz="-0.95 0 -0.1235" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

</robot>